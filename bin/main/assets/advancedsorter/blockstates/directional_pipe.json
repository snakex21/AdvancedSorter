{
    "multipart": [
        {
            "comment": "Center core - always present",
            "apply": {
                "model": "advancedsorter:directional_pipe_core"
            }
        },
        {
            "when": {
                "north": "true"
            },
            "apply": {
                "model": "advancedsorter:directional_arm_north",
                "y": 0
            }
        },
        {
            "when": {
                "south": "true"
            },
            "apply": {
                "model": "advancedsorter:directional_arm_south",
                "y": 180
            }
        },
        {
            "when": {
                "east": "true"
            },
            "apply": {
                "model": "advancedsorter:directional_arm_east",
                "y": 90
            }
        },
        {
            "when": {
                "west": "true"
            },
            "apply": {
                "model": "advancedsorter:directional_arm_west",
                "y": 270
            }
        },
        {
            "when": {
                "up": "true"
            },
            "apply": {
                "model": "advancedsorter:directional_arm_up",
                "x": 270
            }
        },
        {
            "when": {
                "down": "true"
            },
            "apply": {
                "model": "advancedsorter:directional_arm_down",
                "x": 90
            }
        }
    ]
}